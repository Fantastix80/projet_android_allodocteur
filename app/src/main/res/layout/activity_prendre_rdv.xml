<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".prendreRDV">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Liste de Todos :"
            android:textColor="#FFFF556E"
            android:gravity="center"
            android:textSize="25sp">
        </TextView>

        <EditText
            android:id="@+id/search_bar_list_todolists"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Rechercher..."
            android:textColor="#FFFF556E"
            android:textColorHint="#FFFF556E"
            android:backgroundTint="#FFFF556E"
            android:inputType="textMultiLine"
            android:textSize="20sp">
        </EditText>

        <ListView
            android:id="@+id/ListViewTodos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </ListView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>