<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2FB171">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="25sp"
        app:cardElevation="50dp"
        android:layout_margin="30sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="183dp"
                    android:src="@drawable/image_form_inscription"
                    app:tint="#2FB171"
                    app:tintMode="add">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="40dp"
                    android:elevation="20dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="INSCRIPTION"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold">                    >
                </TextView>

            </FrameLayout>

            <TextView
                android:id="@+id/tvDisplayErrors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erreur"
                android:textColor="#FF0000"
                android:layout_gravity="center"
                android:visibility="gone">
            </TextView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Prénom"
                        android:textColor="@color/black"
                        android:paddingLeft="3sp">
                    </TextView>

                    <EditText
                        android:id="@+id/etPrenomInscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="6">
                    </EditText>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom"
                        android:textColor="@color/black"
                        android:paddingLeft="3sp">
                    </TextView>

                    <EditText
                        android:id="@+id/etNomInscription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:ems="10">
                    </EditText>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <EditText
                android:id="@+id/etEmailInscription"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mot de passe"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <EditText
                android:id="@+id/etMdpInscription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Confirmer votre mot de passe"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <EditText
                android:id="@+id/etCmdpInscription"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword">
            </EditText>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vous êtes:"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <Spinner
                android:id="@+id/spinnerIsMedecin"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:drawSelectorOnTop="true"
                android:entries="@array/array_names"
                android:entryValues="@array/array_name_values">
            </Spinner>

            <TextView
                android:id="@+id/tvAlreadyHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textColor="#57a0d4"
                android:layout_marginTop="10sp"
                android:layout_gravity="center">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitInscription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="S'inscrire"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:backgroundTint="#3ADC91"
                android:background="@drawable/rectangleradius"
                android:textColor="@color/white"
                android:layout_marginTop="15sp">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>