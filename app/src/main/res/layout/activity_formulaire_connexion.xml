<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#2FB171">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="25sp"
        app:cardElevation="50dp"
        android:layout_margin="30sp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="183dp"
                    android:src="@drawable/image_form_inscription"
                    app:tint="#2FB171"
                    app:tintMode="add">
                </ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="40dp"
                    android:elevation="20dp"
                    android:fontFamily="sans-serif-condensed-light"
                    android:text="CONNEXION"
                    android:textColor="@color/black"
                    android:textSize="30dp"
                    android:textStyle="bold">                    >
                </TextView>

            </FrameLayout>

            <TextView
                android:id="@+id/tvDisplayErrors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Erreur"
                android:textColor="#FF0000"
                android:layout_gravity="center"
                android:visibility="gone">
            </TextView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Email"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <EditText
                android:id="@+id/etEmailConnexion"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </EditText>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Mot de passe"
                android:textColor="@color/black"
                android:layout_marginTop="10sp"
                android:paddingLeft="3sp">
            </TextView>

            <EditText
                android:id="@+id/etMdpConnexion"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textPassword">
            </EditText>

            <TextView
                android:id="@+id/tvDontHaveAccount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dont_have_account"
                android:textColor="#57a0d4"
                android:layout_marginTop="10sp"
                android:layout_gravity="center">
            </TextView>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnSubmitConnexion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Se connecter"
                android:paddingLeft="26dp"
                android:paddingRight="26dp"
                android:backgroundTint="#3ADC91"
                android:background="@drawable/rectangleradius"
                android:textColor="@color/white"
                android:layout_marginTop="15sp">
            </androidx.appcompat.widget.AppCompatButton>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>